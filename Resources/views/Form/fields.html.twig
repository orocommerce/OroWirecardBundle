{% block oro_wirecard_seamless_credit_card_expiration_date_widget -%}
    {% set validation = {
    'credit-card-expiration-date-not-blank': {'message': 'oro.payment.validation.expiration_date', 'payload': null},
    'credit-card-expiration-date': {'message': 'oro.payment.validation.month', 'payload': null}
    } %}

    <div {{ block('widget_attributes') }} data-validation="{{ validation|json_encode }}">
        <div class="{{ class_prefix }}__form__select {{ class_prefix }}__form__select--exp-month">
            {{ form_widget(form.month, {'attr': {'data-expiration-date-month': true}}) }}
        </div>
        <div class="{{ class_prefix }}__form__select {{ class_prefix }}__form__select--exp-year">
            {{ form_widget(form.year, {'attr': {'data-expiration-date-year': true}}) }}
        </div>
    </div>
{%- endblock %}


{% block oro_wirecard_seamless_sepa_direct_debit_widget -%}
    {% set
    validation = {
    'sepa-iban': {'message': 'oro.wirecard.validation.iban', 'payload': null},
    'sepa-bic': {'message': 'oro.wirecard.validation.bic', 'payload': null}
    } %}
    <div {{ block('widget_attributes') }} data-validation="{{ validation|json_encode }}">
        {% for child in form.children %}
            <div class="{{ class_prefix }}__form__row">
                {{ form_row(child, {class_prefix: class_prefix}) }}
            </div>
        {% endfor %}
    </div>
{%- endblock %}
